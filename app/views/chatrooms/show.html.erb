<h5><strong>Name: </strong><%= @chatroom.name %></h5>
<div data-behavior="messages">
  <% @messages.each do |message| %>
    <div>
      <strong><%= message.user.username %></strong>
      :<%= message.body %>
    </div>
  <% end %>
</div>


<%= form_with model: [@chatroom, Message.new], id: "new_message", remote: true, format: :js do |f| %>
  <%= f.text_area :body, rows: 2, class: "form-control", autofocus: true %>
<% end %>
